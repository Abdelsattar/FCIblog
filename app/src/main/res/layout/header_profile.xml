<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:id="@+id/rel_photo"
                android:layout_marginTop="24dp">

                <ImageView
                    android:id="@+id/header_profile_pic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/pic_19" />
            </RelativeLayout>

            <TextView
                android:id="@+id/header_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rel_photo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:text="@string/dummy_user_name"
                android:textColor="#302e2e"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/header_user_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/header_user_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="@string/dummy_user_email"
                android:textSize="19sp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>